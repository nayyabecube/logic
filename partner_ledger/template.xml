                model="res.partner"
                name="partner_ledger.partner_ledger_2_report"
                file="partner_ledger.partner_ledger_2_report"
                report_type="qweb-html"
                string="Partner Ledger"
                menu="False"/>

        <record id="partner_ledger_2_wizard" model="ir.ui.view">
            <field name="name">partner_ledger_2_wizard</field>
            <field name="model">partner.ledger</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report">

                    <group name="group_top">

                        <group name="group_left">

                            <field name="partner"/>
                            <field name="form"/>

                        </group>

                        <group name="group_right">

                            <field name="entry_type" />
                            <field name="to"/>

                        </group>

                    </group>

                    <footer style="height: 30px !important; border: none !important;">
                        <button name="%(report_for_partner_ledger_2)d" type="action" string="Print" class="oe_highlight "/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="partner_ledger_2_action" model="ir.actions.act_window">
            <field name="name">Partner Ledger</field>
            <field name="res_model">partner.ledger</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="partner_ledger_2_wizard"/>
            <field name="target">new</field>
            <field name="context">{'default_partner': active_id}</field>
        </record>

        <record id="partner_ledger_2_menu_action" model="ir.actions.act_window">
            <field name="name">Partner Ledger</field>
            <field name="res_model">partner.ledger</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="partner_ledger_2_wizard"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="date_wise_filter">
        <field name="model_id" ref="" />
        <field name="name">Print From Wizard</field>
        <field name="key2">client_print_multi</field>
        <field name="value" eval ="'ir.actions.act_window,'+str(ref('partner_ledger_2_action'))"/>
        <field name="key">action</field>
        <field name="model">res.partner</field>
        </record>

